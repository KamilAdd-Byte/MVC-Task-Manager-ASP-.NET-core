@model IEnumerable<WebApplication.Models.TaskModel>

@{
    ViewData["Title"] = "Simple Task Manager";
}

<h2>Simple Task Manager</h2>

<p>
    <a asp-action="Create">Dodaj zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.ActionLink("Wykonane", "Done", new { id = item.TaskId }) |
                @Html.ActionLink("Edytuj", "Edit", new { id = item.TaskId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.TaskId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.TaskId })
            </td>
        </tr>
}
    </tbody>
</table>
